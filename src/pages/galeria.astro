    <style>
      .container {
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
        padding: 30px 50px 30px 50px;
        width: 100%;

        > .grid-container {
          margin-top: 30px;
          margin-bottom: 30px;
          display: grid;
          grid-template-columns: repeat(2, 1fr);
          grid-gap: 10px;
          max-width: 1350px;
        }
      }

      h1 {
        text-align: left;
        font-size: 24px;
        font-weight: 600;
      }

      .intro {
        margin-top: 30px;
        font-size: 16px;
        font-weight: 500;
      }

      .grid-item-1 {
